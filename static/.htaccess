<IfModule mod_rewrite.c>
RewriteEngine On
RewriteCond %{HTTP_HOST} !^www\. [NC]
RewriteRule ^(.*)$ https://www.%{HTTP_HOST}/$1 [R=301,L]
</IfModule>

ErrorDocument 400 https://www.mschwandt.de/404.html
ErrorDocument 401 https://www.mschwandt.de/404.html
ErrorDocument 403 https://www.mschwandt.de/404.html
ErrorDocument 404 https://www.mschwandt.de/404.html
ErrorDocument 500 https://www.mschwandt.de/404.html
ErrorDocument 503 https://www.mschwandt.de/404.html

AddDefaultCharset utf-8
AddCharset UTF-8 .js

<IfModule mod_headers.c>
<FilesMatch "\.(ico|avif|webp|jpeg|jpg|png|css|js|ttf)$">
Header set Cache-Control "max-age=31536000, public"
</FilesMatch>
</IfModule>

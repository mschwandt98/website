<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{HTTP_HOST} !^www\. [NC]
    RewriteRule ^(.*)$ https://www.%{HTTP_HOST}/$1 [R=301,L]
</IfModule>

ErrorDocument 400 https://www.mschwandt.de/404.html
ErrorDocument 401 https://www.mschwandt.de/404.html
ErrorDocument 403 https://www.mschwandt.de/404.html
ErrorDocument 404 https://www.mschwandt.de/404.html
ErrorDocument 500 https://www.mschwandt.de/404.html
ErrorDocument 503 https://www.mschwandt.de/404.html

AddDefaultCharset utf-8
AddCharset UTF-8 .js

<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain text/html text/css application/javascript application/font-sfnt image/x-icon image/vnd.microsoft.icon
</IfModule>

<IfModule mod_headers.c>
    <FilesMatch "\.(ico|avif|webp|jpeg|jpg|png|css|js|ttf)$">
        Header set Cache-Control "max-age=31536000, public"
    </FilesMatch>

    # Serve brotli compressed CSS and JS files if they exist and the client accepts brotli.
    RewriteCond "%{HTTP:Accept-encoding}" "br"
    RewriteCond "%{REQUEST_FILENAME}\.br" "-s"
    RewriteRule "^(.*)\.(js|css)"              "$1\.$2\.br" [QSA]

    # Serve correct content types, and prevent double compression.
    RewriteRule "\.css\.br$" "-" [T=text/css,E=no-gzip:1]
    RewriteRule "\.js\.br$"  "-" [T=text/javascript,E=no-gzip:1]

    <FilesMatch "(\.js\.br|\.css\.br)$">
        Header append Content-Encoding br
        Header append Vary Accept-Encoding
    </FilesMatch>
</IfModule>
